    //   "@/styles/*": ["styles/*"],
    //   "@/api/*": ["api/*"],
    //   "@/modules/*": ["modules/*"],
    //   "@/hooks/*": ["hooks/*"],
    //   "@/utils/*": ["utils/*"],
    //   "@/layouts/*": ["layouts/*"],
    //   "@/store/*": ["store/*"]
    // }
  },
  "include": [
    "src"
  ]
}
